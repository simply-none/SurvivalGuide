$(function(){
    //表格滚动代码
    var learn_news_table=document.getElementById('chh_learn_news_table');
    var learn_news_table_tab=learn_news_table.getElementsByTagName('table')[0];
    var learn_news_table_tab_con=learn_news_table_tab.scrollHeight-learn_news_table.offsetHeight;
    var learn_m=0;

    toTabScroll();

    learn_news_table_tab.onmouseover=function(){

        clearInterval(learn_news_table.timer);
    };

    learn_news_table_tab.onmouseout=function(){

        toTabScroll();
    };


    function toTabScroll(){

        learn_news_table.timer=setInterval(function(){
            learn_m++;
            if(learn_m>=learn_news_table_tab_con){

                learn_m=0;
            }
            learn_news_table_tab.style.top=-learn_m+'px';
        },30);

    }

//表格滚动代码结束
    $(".con2_list4 li").each(function(index){
        var _height = $(this).find(".fr").height()+36;
        $(this).find(".fl").height(_height);
    })


// 图片切换
var i=0;
    $(".nextbtn").on("click",function(){
        clearInterval(timer);
        i++;
        if(i>=$(".con3_wrapper .con3_slide").length){
            i=0;
        }
        move();

    })
    $(".prevbtn").on("click",function(){
        clearInterval(timer);
        --i;
        if(i<0){
            i=$(".con3_wrapper .con3_slide").length-1;
        }
        move();

    })
    function move(){
        $(".con3_wrapper").animate({left:-i*1100+'px'},500);
        $(".point em").eq(i).addClass('active').siblings('em').removeClass('active')
    }

    var timer = setInterval(move1,4000)
     function move1(){
        i++;
        if(i>=$(".con3_wrapper .con3_slide").length){
            i=0;
        }
        $(".con3_wrapper").animate({left:-i*1100+'px'},500);
        $(".point em").eq(i).addClass('active').siblings('em').removeClass('active')
    }

   
    var arr = ['java','html5','php','python','ui','linux','bigdata','vr','rjcs','android','ios']
    var arr2 = ['JavaEE学习路线','HTML5学习路线','PHP学习路线','Python学习路线','UI设计学习路线','云计算学习路线','大数据学习路线','Unity游戏开发学习路线','软件测试学习路线','Android学习路线','iOS学习路线']
    $(document).on('click','.class_btn li',function(){
        var _this = this;
        var i = $(this).index();
        


        $('.wrapper').load('http://www.mobiletrain.org/page/kclx-temp/kclx_'+arr[i]+'.shtml?t='+Date.now(),function(){
            var _html='<ul class="class_btn">';
            for(var k = 0;k<arr2.length;k++){
                if(k==i){
                    _html += '<li class="active"><a href="javascript:;">'+arr2[k]+'</a></li>';
                }else{
                    _html += '<li><a href="javascript:;">'+arr2[k]+'</a></li>';
                }
            }
            _html += '</ul>';
            $(".contain1 .fr").html(_html);
        });
        
    })









})

